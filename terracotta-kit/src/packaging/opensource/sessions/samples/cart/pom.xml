<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.terracotta.samples.sessions</groupId>
  <artifactId>cart</artifactId>
  <version>3.6.0-SNAPSHOT</version>
  <name>Cart</name>
  <packaging>war</packaging>

  <properties>
    <tc-maven-plugin.version>1.8.0-SNAPSHOT</tc-maven-plugin.version>
    <terracotta-session.version>1.2.0-SNAPSHOT</terracotta-session.version>
    <toolkit-api>1.4</toolkit-api>
    <toolkit-runtime.version>4.0.0-SNAPSHOT</toolkit-runtime.version>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.5</version>
    </dependency>

    <dependency>
      <groupId>org.terracotta.session</groupId>
      <artifactId>terracotta-session</artifactId>
      <version>${terracotta-session.version}</version>
    </dependency>      

    <dependency>
      <groupId>org.terracotta</groupId>
      <artifactId>terracotta-toolkit-${toolkit-api}-runtime</artifactId>
      <version>${toolkit-runtime.version}</version>
    </dependency>      
  </dependencies>

  <build>
    <finalName>${name}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <groupId>org.apache.maven.plugins</groupId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-jetty-plugin</artifactId>
        <version>6.1.15</version>
        <groupId>org.mortbay.jetty</groupId>
        <configuration>
          <contextPath>${name}</contextPath>
          <stopKey>STOP</stopKey>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.terracotta.maven.plugins</groupId>
        <artifactId>tc-maven-plugin</artifactId>
        <version>${tc-maven-plugin.version}</version>
      </plugin>
    </plugins>
  </build>


  <repositories>
    <repository>
      <id>terracotta-repository</id>
      <url>http://www.terracotta.org/download/reflector/releases</url>
    </repository>
  </repositories>

  <profiles>
    <profile>
      <id>9081</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-jetty-plugin</artifactId>
            <version>6.1.15</version>
            <groupId>org.mortbay.jetty</groupId>
            <configuration>
              <systemProperties>
                <systemProperty>
                  <name>jetty.port</name>
                  <value>9081</value>
                </systemProperty>
              </systemProperties>
              <stopPort>9981</stopPort>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>9082</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-jetty-plugin</artifactId>
            <version>6.1.15</version>
            <groupId>org.mortbay.jetty</groupId>
            <configuration>
              <systemProperties>
                <systemProperty>
                  <name>jetty.port</name>
                  <value>9082</value>
                </systemProperty>
              </systemProperties>
              <stopPort>9982</stopPort>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
